<h2>Searching for - <%= @search_term %> </h2>

<table border="1">

<tr>
	<th>Image</th>
	<th>Title</th>
	<th>Social Rank</th>
</tr>

<% @recipes.each do |recipe| %>

<tr class=<%= cycle('even', 'odd') %>>
	<td><%= link_to(image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"]) %></td>
	<td><%= link_to( sanitize(recipe["title"]), recipe["source_url"]) %></td>
	<td><%= number_with_precision(recipe["social_rank"], precision: 2) %></td>

</tr>
<% end %>
</table>


<!--creation of an html form for search term is optional-->
<!--if form not made then just input the URL into the browser-->
